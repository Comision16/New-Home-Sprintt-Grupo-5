<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('./partials/head') %>

    <body>
        <!-- HEADER -->
        <%- include('./partials/header') %>
            <main>
                <div class="container my-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="col-12">
                                <h1 class="m-botton25">Register</h1>
                            </div>

                            <section>
                                <form action="" method="POST" enctype="multipart/form-data">
                                    <div class="row">

                                        <div class="col-md-6 my-1">
                                            <div class="form-group">
                                                <label for="name">Nombre completo</label>
                                                <input class="form-control" type="text" name="name" id="name" value="<%= locals.old && old.name ? old.name : null %>">
                                                <p class="form__error__msg"><%= locals.errors && errors.name ? errors.name.msg : null%> </p>
                                            </div>
                                        </div>

                                        <div class="col-md-6 my-1">
                                            <div class="form-group">
                                                <label for="password">Contraseña</label>
                                                <input class="form-control" type="password" name="password" id="password" autocomplete="off">
                                                <p class="form__error__msg"><%= locals.errors && errors.password ? errors.password.msg : null%> </p>

                                            </div>
                                        </div>

                                        <div class="col-md-6 my-1">
                                            <div class="form-group">
                                                <label for="email">E-mail</label>
                                                <input class="form-control" type="email" name="email" id="email" autocomplete="off" value="<%= locals.old && old.email ? old.email : null %>">
                                                <p class="form__error__msg"><%= locals.errors && errors.email ? errors.email.msg : null%> </p>

                                            </div>
                                        </div>

                                        <div class="col-md-6 my-1">
                                            <div class="form-group">

                                                <label for="country">Pais</label>
                                                <select class="form-control" name="country" id="country">
                                                    <option value="Argentina">Argentina</option>
                                                    <option value="Peru">Peru</option>
                                                    <option value="Paraguay">Paraguay</option>
                                                    <option value="Uruguay">Uruguay</option>
                                                    <option value="Chile">Chile</option>
                                                    <option value="Brazil">Brazil</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-6 my-1">
                                            <div class="form-group">
                                                <label for="telefono">Telefono</label>
                                                <input class="form-control" type="tel" name="telefono" id="telefono" autocomplete="off">
                                                <p class="form__error__msg"><%= locals.errors && errors.telefono ? errors.telefono.msg : null%> </p>

                                            </div>
                                        </div>


                                        <div class="col-md-6 my-1">
                                            <div class="form-group">
                                                <label for="avatar">Foto de perfil</label>
                                                <input class="form-control" type="file" name="avatar" id="avatar">
                                                <p class="form__error__msg"><%= locals.errors && errors.avatar ? errors.avatar.msg : null%> </p>

                                            </div>
                                        </div>

                                        <div class="row">
                                            <button class="enviar m-top50 m-botton25" type="submit">Enviar</button>
                                            <p class="login-text">¿Ya tienes cuenta? <a href="/users/login">Entra
                                                    aqui</a></p>
                                        </div>
                                    </div>

                        </div>
                        </form>
                    </div>
                </div>
                </div>
                </section>
            </main>
            <a class="outsidelogo" href="/index"><img width="60px" height="60px" src="/img/logo 1.png" alt="logo"></a>

            <!-- FOOTER -->
            <%- include('./partials/footer') %>
    </body>

</html>