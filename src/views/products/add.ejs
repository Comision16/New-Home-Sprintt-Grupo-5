<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {name: 'Formulario de creación' }) %>

	<body>
		<!-- Header -->
		<%- include('../partials/header') %>
			<!-- /Header -->

			<main class="main-edit">
				<section class="section-edit">
					<div class="son-edit">
						<form action="/products/store" method="POST" enctype="multipart/form-data" id="add">
							<div class="form-edit">
								<label for="name" class="form-label">NOMBRE DEL PRODUCTO</label>
								<input type="text" placeholder="Teclado gamer HyperX Alloy"
									class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"
									id="name" name="name" value="<%= locals.old && old.name ? old.name : null %>">
								<p id="errorName" class="text-danger">
									<%= locals.errors && errors.name ? errors.name.msg : null %>
								</p>
							</div>
							<div class="form-categories">
								<div class="form-edit">
									<label for="price" class="form-label">PRECIO</label>
									<input type="number" placeholder="20.000" name="price"
										class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"
										id="price" value="<%= locals.old && old.price ? old.price : null %>">
										<p id="errorPrice" class="text-danger">
											<%= locals.errors && errors.price ? errors.price.msg : null %>
										</p>
								</div>

								<!-- <div class="form-edit-price">
									<label for="price" class="form-label">PRECIO</label>
									<input type="number" placeholder="20.000" name="price"
										value="<%= locals.old && old.price ? old.price : null %>">
									<p id="errorPrice" class="text-danger">
										<%= locals.errors && errors.price ? errors.price.msg : null %>
									</p>
								</div> -->
								<div class="form-edit-discount">
									<label for="discount" class="form-label">DESCUENTO</label>
									<input id="discount" placeholder="15" type="number" name="discount"
										value="<%= locals.old && old.discount ? old.discount : null %>">
										<p id="errorDiscount"></p>
								</div>
								<div class="form-edit-finalPrice">
									<label for="finalPrice" class="form-label">PRECIO FINAL</label>
									<input id="finalPrice" type="number" name="finalPrice">
								  </div>

								<div class="form-edit-category">
									<label for="category" class="form-label">CATEGORIA</label>
									<select name="categoryId" id="category" class="form-input">
										<% categories.forEach(({id, name})=> { %>
											<option value="<%= id %>">
												<%=name %>
											</option>
											<% }) %>
									</select>
									<p id="categoryError" class="text-danger">
										<%= locals.errors && errors.categoryId ? errors.categoryId.msg : null %>
									</p>
								</div>
								<div class="form-edit-subcategory">
									<label for="category" class="form-label">SUB CATEGORIA</label>
									<select name="subcategoryId" id="category" class="form-input">
										<% subcategories.forEach(({id, name})=> { %>
											<option value="<%= id %>">
												<%= name %>
											</option>
											<% }) %>
									</select>
									<p id="subCategoryError" class="text-danger">
										<%= locals.errors && errors.subcategoryId ? errors.subcategoryId.msg : null %>
									</p>
								</div>
							</div>


							<div class="form-edit-description">
								<label for="description" class="form-label">DESCRIPCIÓN</label>
								<textarea class="form-control <%= locals.errors && errors.description ? 'is-invalid' : null %>"
								  name="description" id="description" cols="30" rows="5"
								  style="resize: none;"></textarea>
								  <p id="descriptionInfo" hidden><span id="numberCharacters"></span> disponibles</p>
								<p id="descriptionError" class="text-danger">
								  <%= locals.errors && errors.description ? errors.description.msg : null %>
								</p>

                           </div>
							<div class="form-edit">
								<label
									class="btn btn-secondary <%= locals.errors && errors.image ? 'btn-danger' : null %>"
									for="image">Agregar
									imagen</label>
								<input hidden type="file" accept="image/*" name="images" id="image" multiple>
								<p id="imageError" class="text-danger">
									<%= locals.errors && errors.image ? errors.image.msg : null %>
								</p>
							</div>
							<div class="form-text">
								<button type="submit" class="button-guardar" id="btn-submit">GUARDAR CAMBIOS</button>
							</div>
						</form>
					</div>
				</section>
			</main>
			<!-- /todos los productos -->

			<!-- footer -->
			<%- include('../partials/footer') %>
			
				<!-- /footer -->
				<%- include('../partials/scripts') %>
			<script src="/js/productsAdd.js"></script>
	</body>
	

</html>